<div class="container">
  <h2>ユーザー</h2>
  <div class="row">
  <% @users.each do |user| %>

        <%= link_to user_path(user) do %>
        <div class="container-child col-md-2 col-sm-4 col-xs-6">
          <p><%= profile_img(user) %></p>
          <p><%= user.name %></p>
          <% end %>
          <p><%= render 'follow_form', user: user %></p>
        </div>

  <% end %>
  </div>
</div>
