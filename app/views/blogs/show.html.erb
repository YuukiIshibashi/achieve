<div class="container">
<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="blog-text">
      <p class="left"><strong>タイトル</strong></p>
      <p class="left"><%= @blog.title %></p>
      <p class="left"><strong>内容</strong></p>
      <p class="left"><%= @blog.content %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @blog.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>コメント一覧</p>

    <ul id="comments_area">
      <% @comments.each do |comment| %>
      <% unless comment.id.nil? %>
        <li id="<%= comment.id %>">
            <%= render partial: 'comments/show', locals: { comment: comment, blog: @blog } %>
        </li>
        <% end %>
          <% end %>
    </ul>
    <div id="form_area">
    <%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
    </div>
    <% if current_user.id == @blog.user_id %>
      <%= link_to '編集', edit_blog_path(@blog) %>
    <% end %>
    <%= link_to '戻る', blogs_path %>
  </div>
</div>
</div>
